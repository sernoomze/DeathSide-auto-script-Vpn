	;;

	8) # ==================================================================================================================

if [[ -e /usr/local/bin/speedtest ]]; then
	clear
	speedtest --share
elif [[ ! -e /usr/local/bin/speedtest ]]; then
	wget -O /usr/local/bin/speedtest "https://raw.githubusercontent.com/sernoomze/DeathSide-auto-script-Vpn/master/Speedtest"
	chmod +x /usr/local/bin/speedtest
	clear
	speedtest --share
